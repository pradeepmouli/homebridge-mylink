{
  "name": "@pmouli/homebridge-mylink",
  "version": "1.5.1-beta.33",
  "description": "Somfy myLink plugin for Homebridge.",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin"
  ],
  "homepage": "https://github.com/pradeepmouli/homebridge-mylink",
  "bugs": {
    "url": "http://github.com/pradeepmouli/homebridge-mylink/issues"
  },
  "author": "Timothy Yung <yungsters@gmail.com>",
  "files": [
    "dist/",
    "LICENSE",
    "config.schema.json",
    "sampleconfig.json",
    "README.md"
  ],
  "main": "dist/Plugin.js",
  "repository": "pradeepmouli/homebridge-mylink",
  "scripts": {
    "prepublishOnly": "tsc",
    "lint": "eslint src/**.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "es6": true,
      "commonjs": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "off"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "engines": {
    "homebridge": ">=1.0.0",
    "node": ">=13.0.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "homebridge": "^1.1.0",
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@pmouli/somfy-synergy": "^1.5.0-beta.31",
    "hb-kit": "^1.0.0-beta.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
